<h1>Users</h1>

<div class="users-table-container">
  <table class="users-table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Full Name</th>
        <th>Recipes</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_profile_path(user) %></td>
          <td><%= user.full_name %></td>
          <td><%= user.recipes.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>